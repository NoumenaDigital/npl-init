{
  "name": "NPL Development Environment",
  // "image": "openjdk",
  "dockerComposeFile": "../docker-compose.yml",
  "runServices": ["postgres", "engine"],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBaseName}",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "noumenadigital.npl-dev-vscode-extension"
      ]
    }
  },
  "forwardPorts": [11000, 12000, 12400, 12700, 5432],
  "postCreateCommand": "curl -s https://documentation.noumenadigital.com/get-npl-cli.sh | bash && docker-compose up -d --wait && PATH=/home/codespace/.npl/bin:$PATH npl deploy --sourceDir src/main"
}